<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:paddingLeft="@dimen/margin_left24px"
        android:paddingRight="@dimen/margin_right24px">
        
        <ImageView
            android:id="@+id/iv_news_picture"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:background="@drawable/rect_red2"
            android:src="@mipmap/trim"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"/>

       <RelativeLayout
           android:layout_marginLeft="@dimen/margin_left24px"
           android:layout_toRightOf="@+id/iv_news_picture"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           >
           <TextView
               android:id="@+id/tv_news_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="行情早报"
               android:textColor="@color/textcolor"
               android:textSize="@dimen/text_size30px"/>
           <TextView
               android:id="@+id/tv_news_content"
               android:layout_marginTop="5dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/tv_news_title"
               android:text="行情早报dddddddddddddddddddddddddddddddddddddddddddd"
               android:singleLine="true"
               android:textColor="@color/tips"
               android:textSize="@dimen/text_size24px"
               />
            <ImageView
                android:id="@+id/iv_news_state"
                android:layout_width="21dp"
                android:layout_height="11dp"
                android:src="@mipmap/sy_zd"
                android:layout_below="@+id/tv_news_content"
                android:layout_marginTop="5dp"/>
           <TextView
               android:layout_marginTop="5dp"
               android:id="@+id/tv_news_date"
               android:layout_alignParentRight="true"
               android:textSize="@dimen/text_size22px"
               android:textColor="@color/tips"
               android:layout_below="@+id/tv_news_content"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="2016-9-10 16:46"/>

       </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>