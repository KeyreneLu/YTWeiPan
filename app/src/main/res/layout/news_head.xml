<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/home_xian3"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_left24px"
        android:paddingRight="@dimen/margin_right24px">

        <RelativeLayout
            android:id="@+id/rl_btn1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/sy_hqcy"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="@string/hq"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size26px"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/sy_zx"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="@string/zx"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size26px"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/sy_zbhd"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="@string/zbhd"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size26px"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_btn4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|center_horizontal">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/sy_xsxt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:text="@string/xsxt"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size26px"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/home_xian4"
        style="@style/xian"
        android:layout_below="@+id/ll_menu"
        />

    <View
        android:id="@+id/home_xian5"
        style="@style/xian"
        android:layout_below="@id/home_xian4"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:id="@+id/ll_message"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/home_xian5"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/sy_gr"
                    />

                <TextView
                    android:id="@+id/tv_login_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/imageView2"
                    android:text="33.5ä¸‡"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size28px"
                    />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/jrdlrc"
                android:textSize="@dimen/text_size26px"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/xian"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/sy_yl"
                    />

                <TextView
                    android:id="@+id/tv_profit_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text="60%"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size28px"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/jrylkj"
                android:textSize="@dimen/text_size26px"/>
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="@color/xian"
            />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@mipmap/sy_qd"
                    />

                <TextView
                    android:id="@+id/tv_most_profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="50610"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size28px"/>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="@string/dbzdyl"
                android:textSize="@dimen/text_size26px"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/home_xian6"
        style="@style/xian"
        android:layout_below="@+id/ll_message"
        />

    <View
        android:id="@+id/home_xian7"
        style="@style/xian"
        android:layout_below="@id/home_xian6"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_xian7"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/margin_left24px"
            android:paddingTop="8dp"
            >

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/sy_xw"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv5"
                android:text="@string/zdxw"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size26px"/>

            <ImageView
                android:id="@+id/iv_more_news"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right24px"
                android:src="@mipmap/icon_tz"
                />

            <TextView
                android:id="@+id/tv_more_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_toLeftOf="@+id/iv_more_news"
                android:text="@string/more"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size24px"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>