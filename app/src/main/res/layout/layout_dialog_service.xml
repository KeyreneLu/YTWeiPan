<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:background="@drawable/rect_white">
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zxkf"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:textSize="@dimen/text_size30px"
            android:textStyle="bold"
            android:textColor="@color/textcolor"/>

        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_below="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/iv_qq"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/fx_wx"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_toRightOf="@+id/iv_qq"
                android:layout_marginLeft="8dp"
                android:text="@string/QQ"
                android:gravity="center_vertical"
                android:textColor="@color/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>

            <ImageView
                android:id="@+id/iv_wx"
                android:src="@mipmap/fx_qq"
                android:scaleType="fitCenter"
                android:layout_marginTop="@dimen/margin_right24px"
                android:layout_below="@+id/iv_qq"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

            <TextView
                android:layout_toRightOf="@+id/iv_wx"
                android:layout_marginLeft="8dp"
                android:layout_below="@+id/iv_qq"
                android:layout_margin="@dimen/margin_right24px"
                android:text="@string/QQ"
                android:gravity="center_vertical"
                android:textColor="@color/textcolor"
                android:layout_width="wrap_content"
                android:layout_height="25dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/margin_left24px"
            android:layout_marginRight="@dimen/margin_right24px"
            android:layout_marginBottom="@dimen/margin_right24px"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dl_btn_selector"
            android:text="@string/dhzx"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size34px"/>
    </RelativeLayout>


</RelativeLayout>