<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:background="@color/bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left24px">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今天"
                android:textSize="@dimen/text_size30px"
                android:textColor="@color/textcolor"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="18:30"
                android:layout_below="@+id/tv_day"
                android:textSize="@dimen/text_size22px"
                android:textColor="@color/ninecolor"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_picture"
            android:layout_marginLeft="30dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/fx_yb"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp">

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20"
                android:textSize="@dimen/text_size30px"
                android:textColor="@color/textcolor"
                />

            <TextView
                android:id="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_money"
                android:layout_marginTop="5dp"
                android:text="@string/bpbyb"
                android:textSize="@dimen/text_size30px"
                android:textColor="@color/ninecolor"
                />

            <TextView
                android:id="@+id/tv_state"
                android:layout_below="@+id/tv_money"
                android:layout_toRightOf="@+id/tv_source"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ninecolor"
                android:textSize="@dimen/text_size26px"
                android:layout_alignTop="@id/tv_source"
                android:text="（交易亏损）"
                android:visibility="invisible"
                />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>