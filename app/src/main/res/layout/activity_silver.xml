<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:background="@color/bg">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>
    <View
        android:id="@+id/silver_xian"
        android:layout_below="@+id/include"
        style="@style/xian"
        />

    <View
        android:id="@+id/silver_xian2"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/silver_xian"
        style="@style/xian"
        />

    <RelativeLayout
        android:id="@+id/rl_number"
        android:layout_below="@+id/silver_xian2"
        android:background="@color/zc_bg"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_surplus"
            android:layout_marginTop="20dp"
            android:textSize="@dimen/text_size24px"
            android:textColor="@color/ninecolor"
            android:text="@string/yehb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tv_surplus"
            android:layout_width="match_parent"
            android:layout_height="44dp">
            
            <RelativeLayout
                android:id="@+id/rl_hundred"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rect_yellow2"
                android:layout_marginRight="17dp">
                <TextView
                    android:id="@+id/tv_hundred"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hyb"
                    android:textColor="@color/dl_bg"
                    android:textSize="@dimen/text_size30px"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_kilo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rect_dtwo">
                <TextView
                    android:id="@+id/tv_kilo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tyb"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size30px"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear2"
            android:layout_marginTop="20dp"
            android:layout_below="@id/linear1"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/rl_myriad"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rect_dtwo"
                android:layout_marginRight="17dp">
                <TextView
                    android:id="@+id/tv_myriad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wyb"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size30px"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_other"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rect_dtwo">
                <EditText
                    android:id="@+id/et_other"
                    android:inputType="number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/qtse"
                    android:textCursorDrawable="@drawable/cursor_bg"
                    android:cursorVisible="false"
                    android:paddingLeft="3dp"
                    android:background="@null"
                    android:gravity="right"
                    android:textColorHint="@color/textcolor"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size30px"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <View
        android:id="@+id/silver_xian3"
        style="@style/xian"
        android:layout_below="@+id/rl_number"/>

    <RelativeLayout
        android:id="@+id/rl_cost"
        android:layout_below="@+id/silver_xian3"
        android:background="@color/zc_bg"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:textSize="@dimen/text_size30px"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/xj"
            />
        <TextView
            android:id="@+id/tv_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10å…ƒ"
            android:textColor="@color/dl_bg"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/text_size30px"/>

    </RelativeLayout>

    <View
        android:id="@+id/silver_xian4"
        style="@style/xian"
        android:layout_below="@+id/rl_cost"
        />

    <View
        android:id="@+id/silver_xian5"
        android:layout_marginTop="8dp"
        style="@style/xian"
        android:layout_below="@+id/silver_xian4"
        />

    <RelativeLayout
        android:id="@+id/rl_pay"
        android:layout_below="@+id/silver_xian5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zc_bg"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <TextView
            android:id="@+id/tv_mode"
            android:layout_marginTop="20dp"
            android:text="@string/zffs"
            android:textSize="@dimen/text_size30px"
            android:textColor="@color/textcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_below="@+id/tv_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/silver_choose2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@mipmap/icon_dg"
                android:layout_marginRight="6dp"
                />

            <TextView
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size30px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qbyek"/>

            <TextView
                android:id="@+id/tv_use_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15421"
                android:textColor="@color/dl_bg"
                android:textSize="@dimen/text_size30px"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kyk"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size30px"/>

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/silver_xian6"
        android:layout_below="@id/rl_pay"
        style="@style/xian"/>
    <LinearLayout
        android:id="@+id/ll_xy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/silver_xian6"
        android:layout_marginLeft="@dimen/margin_left24px"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/silver_choose"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginRight="3dp"
            android:background="@mipmap/icon_dg"
            android:paddingLeft="3dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/ydty"
            android:textColor="@color/tips"
            android:textSize="@dimen/text_size24px" />

        <TextView
            android:id="@+id/silver_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/xy"
            android:textColor="@color/dl_bg"
            android:textSize="@dimen/text_size24px" />
    </LinearLayout>
    
    <Button
        android:id="@+id/btn_sure_bug"
        android:layout_marginRight="@dimen/margin_right24px"
        android:layout_marginLeft="@dimen/margin_left24px"
        android:textSize="@dimen/text_size40px"
        android:textColor="@color/colorPrimary"
        android:text="@string/qrgm"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/dl_btn_selector"/>

</RelativeLayout>