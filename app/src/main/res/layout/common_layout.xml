<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_gray6"
        >

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/home_species"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left24px"
                android:layout_toLeftOf="@+id/iv_Kline"
                android:gravity="center_vertical"
                android:text="推荐产品：石油10"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size30px"/>

            <ImageView
                android:id="@+id/iv_chart"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/iv_Kline"
                android:src="@mipmap/tz_axwxz"/>

            <ImageView
                android:id="@+id/iv_Kline"
                android:layout_width="35dp"
                android:layout_height="28dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right24px"
                android:src="@mipmap/tz_tjwxz"/>
        </RelativeLayout>

        <View
            android:id="@+id/home_xian1"
            style="@style/xian"
            android:layout_below="@+id/rl1"/>

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/home_xian1"
            android:background="@color/ve"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gao"
                    android:textColor="@color/ccolor"
                    android:textSize="@dimen/text_size24px"
                    />

                <TextView
                    android:id="@+id/tv_high"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/high"
                    android:text="4150"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size24px"/>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/xian"
                android:layout_height="match_parent"
                android:background="@color/xian"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-24"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size24px"

                    />

                <TextView
                    android:id="@+id/tv_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/percent"
                    android:text="(-0.25%)"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size24px"/>

            </RelativeLayout>

            <View
                android:layout_width="@dimen/xian"
                android:layout_height="match_parent"
                android:background="@color/xian"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/di"
                    android:textColor="@color/ccolor"
                    android:textSize="@dimen/text_size24px"
                    />

                <TextView
                    android:id="@+id/tv_low"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/low"
                    android:text="4150"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size24px"/>

            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/home_xian3"
            style="@style/xian"
            android:layout_below="@+id/ll1"/>

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_below="@+id/home_xian3"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_left24px"
                android:layout_marginRight="@dimen/margin_right24px"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/rl_rose"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_red">

                    <ImageView
                        android:id="@+id/iv_rose"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:src="@mipmap/tz_szd"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left24px"
                        android:layout_toRightOf="@+id/iv_rose"
                        android:text="@string/mz"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/text_size40px"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_fall"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_green2"
                    >

                    <ImageView
                        android:id="@+id/iv_fall"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/tz_xdd"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/margin_right24px"
                        android:layout_toLeftOf="@+id/iv_fall"
                        android:text="@string/mz"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/text_size40px"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="75dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/rect_black"
                android:gravity="center"
                android:text="4512"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size38px"
                android:textStyle="bold"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl3"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_below="@+id/rl2"
            android:layout_marginLeft="@dimen/margin_left24px"
            android:layout_marginRight="@dimen/margin_right24px"
            android:layout_marginTop="15dp">

            <com.github.mikephil.charting.charts.CandleStickChart
                android:id="@+id/Candle_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/rl3"
            android:layout_marginLeft="@dimen/margin_left24px"
            android:layout_marginRight="@dimen/margin_right24px"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/tv_interval"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rect_gray2"
                android:gravity="center"
                android:text="1分钟"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size30px"/>

            <RelativeLayout
                android:id="@+id/rl_reduce"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rect_gray2">

                <ImageView
                    android:id="@+id/iv_reduce"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/tz_jianb"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ball1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/tz_kxy"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ball2"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/tz_kxy"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ball3"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/tz_kxy"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ball4"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/tz_kxy"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ball5"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/tz_kxy"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_add"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:background="@drawable/rect_gray2"
                >

                <ImageView
                    android:id="@+id/iv_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/tz_jiab"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/ll2"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/margin_left24px"
            android:layout_marginRight="@dimen/margin_right24px"
            android:layout_marginTop="35dp">

            <Button
                android:id="@+id/btn_simulate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="6dp"
                android:layout_weight="1"
                android:background="@drawable/dl_btn_bg"
                android:text="@string/mnxd"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size40px"/>

            <Button
                android:id="@+id/btn_real"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:background="@drawable/rect_red"
                android:text="@string/zsxd"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size40px"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>