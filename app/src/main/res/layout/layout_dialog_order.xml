<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rect_gray6">

    <RelativeLayout
        android:id="@+id/popu_top"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left24px"
        android:layout_marginRight="@dimen/margin_right24px">

        <TextView
            android:id="@+id/tv_order_sum"
            android:layout_marginTop="8dp"
            android:layout_width="80dp"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/xdls"
            android:textSize="@dimen/text_size28px"
            android:layout_marginRight="20dp"
            />
        <RelativeLayout
            android:layout_toRightOf="@+id/tv_order_sum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/choice1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="@string/one"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rect_yellow"
                    android:layout_marginRight="@dimen/margin_right24px"/>
                <TextView
                    android:id="@+id/choice2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="@string/five"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rect_gray2"
                    android:layout_marginRight="@dimen/margin_right24px"/>
                <TextView
                    android:id="@+id/choice3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="@string/ten"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rect_gray2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_below="@+id/ll_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/choice4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="@string/twenty"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rect_gray2"
                    android:layout_marginRight="@dimen/margin_right24px"/>
                <TextView
                    android:id="@+id/choice5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="@string/fifty"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rect_gray2"
                    android:layout_marginRight="@dimen/margin_right24px"/>
                <TextView
                    android:id="@+id/choice6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:text="@string/hundred"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/rect_gray2"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/popu_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left24px"
        android:layout_marginRight="@dimen/margin_right24px"
        >

        <TextView
            android:id="@+id/tv_percent"
            android:layout_width="80dp"
            android:textColor="@color/colorPrimary"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/zybzj"
            android:textSize="@dimen/text_size28px"
            android:layout_marginRight="20dp"
            />
        <RelativeLayout
            android:layout_toRightOf="@+id/tv_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_coin"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size28px"
                android:text="600元"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_cash"/>
            <TextView
                android:id="@+id/tv_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/syxjj"
                android:textColor="@color/dl_bg"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/tv_usemoney"
                android:textSize="@dimen/text_size24px"
                android:textColor="@color/tips"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tv_coin"
                android:text="可用金额8000元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_middle2"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left24px"
        android:layout_marginRight="@dimen/margin_right24px">

        <TextView
            android:id="@+id/tv_checkprice"
            android:layout_width="80dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/zyj"
            android:textSize="@dimen/text_size28px"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:layout_toRightOf="@+id/tv_checkprice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rect_gray2"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/check_reduce"
                android:layout_marginLeft="@dimen/margin_left24px"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tz_jianb"/>
            <TextView
                android:id="@+id/tv_check"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size28px"
                android:text="4000"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/check_add"
                android:layout_marginRight="@dimen/margin_right24px"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tz_jiab"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_middle3"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/rl_middle2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left24px"
        android:layout_marginRight="@dimen/margin_right24px">

        <TextView
            android:id="@+id/tv_lossprice"
            android:layout_width="80dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="@string/zkj"
            android:textSize="@dimen/text_size28px"
            android:layout_marginRight="20dp"
            />

        <LinearLayout
            android:id="@+id/ll_lossprice"
            android:layout_toRightOf="@+id/tv_lossprice"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/rect_gray2"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/loss_reduce"
                android:layout_marginLeft="@dimen/margin_left24px"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tz_jianb"/>
            <TextView
                android:id="@+id/tv_loss"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size28px"
                android:text="4000"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/loss_add"
                android:layout_marginRight="@dimen/margin_right24px"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/tz_jiab"/>
        </LinearLayout>

        <TextView
            android:layout_below="@+id/ll_lossprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size24px"
            android:textColor="@color/tips"
            android:text="@string/order_tip"
            android:layout_marginTop="8dp"
            android:layout_alignLeft="@+id/ll_lossprice"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_place"
        android:layout_below="@+id/rl_middle3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:text="@string/qrxd"
        android:textSize="@dimen/text_size40px"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/dl_btn_selector"
        android:layout_marginLeft="@dimen/margin_left24px"
        android:layout_marginRight="@dimen/margin_right24px"/>

</RelativeLayout>