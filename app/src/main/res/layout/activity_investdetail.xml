<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/minute_black"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>

    <View
        style="@style/xian"
        android:background="@color/ninecolor"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <TextView
            android:id="@+id/tv_stock_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="4185.00"
            android:textColor="@color/green"
            android:textSize="@dimen/margintop70px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_stock_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_stock_price"
            android:layout_marginLeft="@dimen/text_size30px"
            android:layout_toRightOf="@+id/tv_stock_price"
            android:text="-27"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size24px"
            />

        <TextView
            android:id="@+id/tv_stock_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_stock_state"
            android:layout_marginLeft="@dimen/text_size30px"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/tv_stock_price"
            android:text="(-0.64%)"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size24px"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_stock_price"
            android:layout_marginRight="@dimen/margin_right24px"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_left24px"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xjk"
                    android:textColor="@color/color8"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv_price_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:text="4,154"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv1"
                    android:layout_marginTop="5dp"
                    android:text="@string/xzs"
                    android:textColor="@color/color8"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv_prec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv2"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/tv2"
                    android:text="4,154"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size24px"/>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/xian"
                android:layout_height="match_parent"
                android:background="@color/ninecolor"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xzg"
                    android:textColor="@color/color8"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv_high_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/tv3"
                    android:text="4,154"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv3"
                    android:layout_marginTop="5dp"
                    android:text="@string/xzd"
                    android:textColor="@color/color8"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv_low_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv4"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/tv4"
                    android:text="4,154"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size24px"/>
            </RelativeLayout>

            <View
                android:layout_width="@dimen/xian"
                android:layout_height="match_parent"
                android:background="@color/ninecolor"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xcjl"
                    android:textColor="@color/color8"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv_turnover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/tv5"
                    android:text="4,154"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv5"
                    android:layout_marginTop="5dp"
                    android:text="@string/xcje"
                    android:textColor="@color/color8"
                    android:textSize="@dimen/text_size24px"/>

                <TextView
                    android:id="@+id/tv_premium_turnover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tv6"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/tv6"
                    android:text="4,154"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size24px"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        style="@style/xian"
        android:background="@color/ninecolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_time_division"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/textcolor"
            android:gravity="center"
            android:text="@string/xfs"
            android:textColor="@color/cccolor"
            android:textSize="@dimen/text_size26px"/>

        <View
            android:layout_width="@dimen/xian"
            android:layout_height="match_parent"
            android:background="@color/ninecolor"/>

        <TextView
            android:id="@+id/tv_five_day"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/xwr"
            android:textColor="@color/cccolor"
            android:textSize="@dimen/text_size26px"/>

        <View
            android:layout_width="@dimen/xian"
            android:layout_height="match_parent"
            android:background="@color/ninecolor"/>

        <TextView
            android:id="@+id/tv_day_k"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/xrk"
            android:textColor="@color/cccolor"
            android:textSize="@dimen/text_size26px"/>

        <View
            android:layout_width="@dimen/xian"
            android:layout_height="match_parent"
            android:background="@color/ninecolor"/>

        <TextView
            android:id="@+id/tv_week_k"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/xzk"
            android:textColor="@color/cccolor"
            android:textSize="@dimen/text_size26px"/>

        <View
            android:layout_width="@dimen/xian"
            android:layout_height="match_parent"
            android:background="@color/ninecolor"
            />

        <RelativeLayout
            android:id="@+id/rl_month_k"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_month_k"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/wd_xhjt"
                android:gravity="center"
                android:text="@string/xyk"
                android:textColor="@color/cccolor"
                android:textSize="@dimen/text_size26px"/>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/xian"
            android:layout_height="match_parent"
            android:background="@color/ninecolor"/>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/iv_full_chart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/tz_fd"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        style="@style/xian"
        android:background="@color/ninecolor"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MA"
                android:textColor="@color/ma_5"
                android:textSize="@dimen/text_size20px"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5：9.31"
                android:textColor="@color/ma_5"
                android:textSize="@dimen/text_size20px"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10：9.31"
                android:textColor="@color/ma_10"
                android:textSize="@dimen/text_size20px"/>
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20：9.31"
                android:textColor="@color/ma_20"
                android:textSize="@dimen/text_size20px"/>
        </LinearLayout>
        <com.github.mikephil.charting.charts.CombinedChart
            android:id="@+id/combinedchart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </RelativeLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        android:layout_weight="1"
        />

    <View
        style="@style/xian"
        android:background="@color/ninecolor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/ccolor">

        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/xmr"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size34px"
            />

        <View
            android:layout_width="@dimen/xian"
            android:layout_height="match_parent"
            android:background="@color/ninecolor"/>

        <TextView
            android:id="@+id/tv_sell"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/xmc"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size34px"
            />
    </LinearLayout>

</LinearLayout>