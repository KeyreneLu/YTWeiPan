<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <include
        android:id="@+id/include"
        layout="@layout/head"/>
    <View
        android:id="@+id/contact_xian"
        android:layout_below="@+id/include"
        style="@style/xian"
        />

    <View
        android:layout_marginTop="8dp"
        android:id="@+id/contact_xian2"
        android:layout_below="@+id/contact_xian"
        style="@style/xian"
        />
    <RelativeLayout
        android:id="@+id/rl_once"
        android:layout_below="@+id/contact_xian2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/zc_bg"
        android:paddingLeft="@dimen/margin_left24px"
        android:paddingRight="@dimen/margin_right24px"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/rl_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_degree_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ydrm"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size28px"
                android:layout_marginRight="3dp"/>

            <TextView
                android:id="@+id/tv_type_friend"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv_degree_contact"
                android:text="@string/yqdhy"
                android:textSize="@dimen/text_size20px"
                android:textColor="@color/ninecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_rebate"
                android:layout_alignParentRight="true"
                android:background="@drawable/rect_yellow3"
                android:text="@string/rmflz"
                android:gravity="center"
                android:textColor="@color/dl_bg"
                android:textSize="@dimen/text_size28px"
                android:layout_width="115dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/rl_contact"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:id="@+id/rl_register_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_register_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size34px"/>

                <TextView
                    android:layout_below="@+id/tv_register_number"
                    android:textColor="@color/ninecolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size28px"
                    android:layout_marginTop="5dp"
                    android:text="@string/zcrs"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/bsix"/>
            <RelativeLayout
                android:id="@+id/rl_real_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_real_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size34px"/>

                <TextView
                    android:layout_below="@+id/tv_real_number"
                    android:textColor="@color/ninecolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size28px"
                    android:layout_marginTop="5dp"
                    android:text="@string/smrs"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/bsix"/>
            <RelativeLayout
                android:id="@+id/rl_invested_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_invested_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size34px"/>

                <TextView
                    android:layout_below="@+id/tv_invested_number"
                    android:textColor="@color/ninecolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size28px"
                    android:layout_marginTop="5dp"
                    android:text="@string/ytzrs"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_contact_detail"
                android:layout_marginRight="0dp"
                android:layout_gravity="center_vertical"
                style="@style/MyImageViewStyle"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:id="@+id/contact_xian3"
        android:layout_below="@+id/rl_once"
        style="@style/xian"/>

    <View
        android:id="@+id/contact_xian4"
        android:layout_below="@+id/contact_xian3"
        android:layout_marginTop="8dp"
        style="@style/xian"/>

    <RelativeLayout
        android:id="@+id/rl_second"
        android:layout_below="@+id/contact_xian4"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@color/zc_bg"
        android:paddingLeft="@dimen/margin_left24px"
        android:paddingRight="@dimen/margin_right24px"
        android:gravity="center_vertical">


        <RelativeLayout
            android:id="@+id/rl_contact2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_degree_contact2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edrm"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/text_size28px"
                android:layout_marginRight="3dp"/>

            <TextView
                android:id="@+id/tv_type_friend2"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv_degree_contact2"
                android:text="@string/hydhy"
                android:textSize="@dimen/text_size20px"
                android:textColor="@color/ninecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_rebate2"
                android:layout_alignParentRight="true"
                android:background="@drawable/rect_yellow3"
                android:text="@string/rmflz"
                android:gravity="center"
                android:textColor="@color/dl_bg"
                android:textSize="@dimen/text_size28px"
                android:layout_width="115dp"
                android:layout_height="20dp"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/rl_contact2"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:id="@+id/rl_register_number2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/tv_register_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size34px"/>

                <TextView
                    android:layout_below="@+id/tv_register_number2"
                    android:textColor="@color/ninecolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size28px"
                    android:layout_marginTop="5dp"
                    android:text="@string/zcrs"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/bsix"/>
            <RelativeLayout
                android:id="@+id/rl_real_number2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_real_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size34px"/>

                <TextView
                    android:layout_below="@+id/tv_real_number2"
                    android:textColor="@color/ninecolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size28px"
                    android:layout_marginTop="5dp"
                    android:text="@string/smrs"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/bsix"/>
            <RelativeLayout
                android:id="@+id/rl_invested_number2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_invested_number2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/text_size34px"/>

                <TextView
                    android:layout_below="@+id/tv_invested_number2"
                    android:textColor="@color/ninecolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size28px"
                    android:layout_marginTop="5dp"
                    android:text="@string/ytzrs"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_contact_detail2"
                android:layout_marginRight="0dp"
                android:layout_gravity="center_vertical"
                style="@style/MyImageViewStyle"
                android:visibility="invisible"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/contact_xian5"
        android:layout_below="@+id/rl_second"
        style="@style/xian"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_below="@+id/contact_xian5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_left24px"
        android:paddingRight="@dimen/margin_right24px"
        >

        <TextView
            android:id="@+id/declare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/declare1"
            android:textColor="@color/tips"
            android:textSize="@dimen/text_size22px"
            />
        <TextView
            android:id="@+id/declare2"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/declare"
            android:textColor="@color/tips"
            android:textSize="@dimen/text_size22px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/declare2"/>
        <TextView
            android:id="@+id/ban"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fjtl"
            android:textColor="@color/dl_bg"
            android:textSize="@dimen/text_size22px"
            android:layout_toRightOf="@id/declare2"
            android:layout_alignTop="@id/declare2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jxfjcl"
            android:textColor="@color/tips"
            android:textSize="@dimen/text_size22px"
            android:layout_toRightOf="@id/ban"
            android:layout_alignTop="@id/ban"/>

        <TextView
            android:id="@+id/declare3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/declare3"
            android:layout_below="@+id/declare2"
            android:layout_marginTop="5dp"
            android:textColor="@color/tips"
            android:textSize="@dimen/text_size22px"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_upgrade_team"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dl_bg"
        android:text="@string/sjzd"
        android:textSize="@dimen/text_size40px"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>