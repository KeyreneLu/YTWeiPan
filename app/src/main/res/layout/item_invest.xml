<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/lv_auto_seletor"
        >
        <TextView
            android:id="@+id/Invest_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="17dp"
            android:gravity="center_vertical"
            android:text="@string/cp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size30px"/>

        <ImageView
            android:id="@+id/Invest_state"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignTop="@+id/Invest_name"
            android:layout_marginTop="@dimen/text_size36px"
            android:layout_toLeftOf="@+id/ll_invest"
            android:src="@mipmap/cp_sz"/>

        <LinearLayout
            android:id="@+id/ll_invest"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_rose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="4191"
                android:textColor="@color/ninecolor"
                android:textSize="@dimen/text_size24px"/>

            <TextView
                android:id="@+id/tv_fall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:text="4191"
                android:textColor="@color/ninecolor"
                android:textSize="@dimen/text_size24px"/>
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/fi_state"
        android:layout_width="20dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="7dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/tz_tj"
        />
</RelativeLayout>